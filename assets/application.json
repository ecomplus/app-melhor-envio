{
  "app_id": 1236,
  "title": "Melhor Envio",
  "slug": "melhor-envio",
  "paid": false,
  "version": "1.9.1",
  "type": "external",
  "github_repository": "https://github.com/ecomclub/app-melhor-envio",
  "admin_settings": {
    "enabled_label_purchase": {
      "schema": {
        "title": "Adicionar etiquetas",
        "type": "boolean",
        "default": false,
        "description": "Se habilitado, irá adicionar etiquetas ao carrinho do ME para pedidos marcados como \"Pronto para envio\" e com NF emitida"
      },
      "hide": false
    },
    "enabled_label_checkout": {
      "schema": {
        "title": "Comprar etiquetas",
        "type": "boolean",
        "default": false,
        "description": "Se habilitado em conjunto com a adição de etiquetas, irá finalizar a compra das etiquetas no ME automaticamente"
      },
      "hide": false
    },
    "enabled_non_commercial": {
      "schema": {
        "title": "Envio não comercial",
        "type": "boolean",
        "default": false,
        "description": "Com a opção habilitada, se torna desnecessário a obrigação de número de nota fiscal na emissão da etiqueta no Melhor Envio"
      },
      "hide": false
    },
    "disable_tracking": {
      "schema": {
        "title": "Desabilitar rastreamento",
        "type": "boolean",
        "default": false,
        "description": "Desativa a atualização automática de status de pedidos por rastreamento da etiqueta do ME"
      },
      "hide": false
    },
    "use_cubic_weight": {
      "schema": {
        "title": "Utilizar cotação cubagem",
        "type": "boolean",
        "description": "Indicado apenas para produtos grandes.",
        "default": false
      },
      "hide": false
    },
    "receipt": {
      "schema": {
        "title": "Aviso de Recebimento",
        "type": "boolean",
        "default": false,
        "description": "Serviço com um custo adicional que gera um documento que comprova a entrega do pedido"
      },
      "hide": false
    },
    "own_hand": {
      "schema": {
        "title": "Mão própria",
        "type": "boolean",
        "default": false,
        "description": "Serviço com custo adicional onde apenas o destinatário pode receber o pedido"
      },
      "hide": false
    },
    "jadlog_agency": {
      "schema": {
        "title": "Agência Jadlog",
        "type": "integer",
        "description": "Código da agência da transportadora Jadlog que fará a coleta das encomendas"
      },
      "hide": false
    },
    "loggi_agency": {
      "schema": {
        "title": "Agência Loggi",
        "type": "integer",
        "description": "Código da agência da transportadora da Loggi que receberá encomendas"
      },
      "hide": false
    },
    "buslog_agency": {
      "schema": {
        "title": "Agência Buslog",
        "type": "integer",
        "description": "Código da agência da transportadora da Buslog que receberá encomendas"
      },
      "hide": false
    },
    "azul_agency": {
      "schema": {
        "title": "Agência Azul",
        "type": "integer",
        "description": "Código da agência da transportadora da Azul (apenas possível envios não comerciais)"
      },
      "hide": false
    },
    "melhor_agency": {
      "schema": {
        "title": "Agência Melhor Envio",
        "type": "integer",
        "description": "Código da agência do Melhor Envio"
      },
      "hide": false
    },
    "sort_services": {
      "schema": {
        "title": "Ordem dos serviços",
        "type": "string",
        "description": "Ordem em que os serviços de envio serão listados.",
        "enum": [
          "Maior preço",
          "Menor preço",
          "Maior prazo de entrega",
          "Melhor prazo de entrega"
        ]
      },
      "hide": false
    },
    "posting_deadline": {
      "schema": {
        "title": "Prazo de postagem",
        "type": "object",
        "required": [
          "days"
        ],
        "additionalProperties": false,
        "properties": {
          "days": {
            "type": "integer",
            "minimum": 0,
            "maximum": 999999,
            "title": "Número de dias",
            "description": "Dias de prazo para postar os produtos após a compra"
          },
          "working_days": {
            "type": "boolean",
            "default": true,
            "title": "Dias úteis"
          },
          "after_approval": {
            "type": "boolean",
            "default": true,
            "title": "Após aprovação do pagamento"
          }
        }
      },
      "hide": false
    },
    "additional_price": {
      "schema": {
        "type": "number",
        "minimum": -999999,
        "maximum": 999999,
        "title": "Custo adicional",
        "description": "Valor a adicionar (negativo para descontar) no frete calculado via Correios"
      },
      "hide": false
    },
    "shipping_rules": {
      "schema": {
        "title": "Regras de envio",
        "description": "Aplicar descontos/adicionais condicionados ou desabilitar regiões",
        "type": "array",
        "maxItems": 300,
        "items": {
          "title": "Regra de envio",
          "type": "object",
          "minProperties": 1,
          "properties": {
            "service_name": {
              "type": "string",
              "title": "Nome do serviço"
            },
            "zip_range": {
              "title": "Faixa de CEP",
              "type": "object",
              "required": [
                "min",
                "max"
              ],
              "properties": {
                "min": {
                  "type": "integer",
                  "minimum": 10000,
                  "maximum": 999999999,
                  "title": "CEP inicial"
                },
                "max": {
                  "type": "integer",
                  "minimum": 10000,
                  "maximum": 999999999,
                  "title": "CEP final"
                }
              }
            },
            "min_amount": {
              "type": "number",
              "minimum": 1,
              "maximum": 999999999,
              "title": "Valor mínimo da compra"
            },
            "free_shipping": {
              "type": "boolean",
              "default": false,
              "title": "Frete grátis"
            },
            "discount": {
              "title": "Desconto",
              "type": "object",
              "required": [
                "value"
              ],
              "properties": {
                "percentage": {
                  "type": "boolean",
                  "default": false,
                  "title": "Desconto percentual"
                },
                "value": {
                  "type": "number",
                  "minimum": -99999999,
                  "maximum": 99999999,
                  "title": "Valor do desconto",
                  "description": "Valor percentual/fixo do desconto ou acréscimo (negativo)"
                }
              }
            },
            "fixed": {
              "type": "number",
              "minimum": 1,
              "maximum": 999999999,
              "title": "Valor fixo do frete"
            }
          }
        }
      },
      "hide": false
    },
    "unavailable_for": {
      "schema": {
        "type": "array",
        "title": "Desativar serviços",
        "description": "É possível desabilitar determinados serviços de envio para determinadas faixas de cep ou para todo o Brasil.",
        "uniqueItems": true,
        "items": {
          "type": "object",
          "required": [
            "service_name"
          ],
          "properties": {
            "zip_range": {
              "title": "Faixa de CEP",
              "type": "object",
              "required": [
                "min",
                "max"
              ],
              "properties": {
                "min": {
                  "type": "integer",
                  "minimum": 10000,
                  "maximum": 999999999,
                  "title": "CEP inicial"
                },
                "max": {
                  "type": "integer",
                  "minimum": 10000,
                  "maximum": 999999999,
                  "title": "CEP final"
                }
              }
            },
            "service_name": {
              "type": "string",
              "title": "Serviço",
              "description": "Nome do serviço que será desabilitado, ex: SEDEX"
            }
          }
        }
      },
      "hide": false
    },
    "services": {
      "schema": {
        "title": "Rótulo dos Serviços",
        "description": "Para alterar o nome de exibição de algum serviço basta infomar o código do serviço e um novo rótulo de exibição. ",
        "type": "array",
        "maxItems": 6,
        "items": {
          "title": "Serviço de entrega",
          "type": "object",
          "required": [
            "service_name",
            "label"
          ],
          "properties": {
            "service_name": {
              "type": "string",
              "title": "Serviço",
              "default": "PAC",
              "description": "Nome oficial do serviço na transportadora"
            },
            "label": {
              "type": "string",
              "maxLength": 50,
              "title": "Rótulo",
              "description": "Nome do serviço exibido aos clientes"
            }
          }
        }
      },
      "hide": true
    },
    "sender_info": {
      "schema": {
        "title": "Informações do remetente",
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "doc_number": {
            "type": "string",
            "title": "CPF / CNPJ de envio",
            "description": "Apenas números. Caso emita nota fiscal, alguns envios podem ser bloqueados se não tiver cnpj."
          },
          "doc_number_type": {
            "type": "string",
            "title": "CNAE",
            "description": "Caso utilize Latam Cargo é obrigatório"
          }
        }
      },
      "hide": false
    },
    "access_token": {
      "schema": {
        "title": "Melhor Envio Token",
        "type": "string",
        "description": "Token vinculado a sua conta no melhor envio."
      },
      "hide": true
    },
    "warehouses": {
      "schema": {
        "title": "Armazéns (multi CD)",
        "description": "Origens e destinos para cada centro de distribuição",
        "type": "array",
        "maxItems": 30,
        "items": {
          "title": "Centro de distribuição",
          "type": "object",
          "required": [
            "zip"
          ],
          "additionalProperties": false,
          "properties": {
            "code": {
              "type": "string",
              "maxLength": 30,
              "pattern": "^[A-Za-z0-9-_]{2,30}$",
              "title": "Código do CD"
            },
            "doc": {
              "type": "string",
              "maxLength": 255,
              "title": "Documento da filial",
              "description": "CNPJ da filial associado à sua conta"
            },
            "zip": {
              "type": "string",
              "maxLength": 9,
              "pattern": "^[0-9]{5}-?[0-9]{3}$",
              "title": "CEP de origem",
              "description": "Código postal do remetente para cálculo do frete"
            },
            "street": {
              "type": "string",
              "maxLength": 200,
              "title": "Digite a rua"
            },
            "number": {
              "type": "integer",
              "min": 1,
              "max": 9999999,
              "title": "Digite o número da residência"
            },
            "complement": {
              "type": "string",
              "maxLength": 100,
              "title": "Complemento"
            },
            "borough": {
              "type": "string",
              "maxLength": 100,
              "title": "Bairro"
            },
            "city": {
              "type": "string",
              "maxLength": 100,
              "title": "Cidade"
            },
            "province_code": {
              "type": "string",
              "title": "Sigla do Estado",
              "enum": [
                "AC",
                "AL",
                "AP",
                "AM",
                "BA",
                "CE",
                "DF",
                "ES",
                "GO",
                "MA",
                "MT",
                "MS",
                "MG",
                "PA",
                "PB",
                "PR",
                "PE",
                "PI",
                "RR",
                "RO",
                "RJ",
                "RS",
                "RN",
                "SC",
                "SP",
                "SE",
                "TO"
              ]
            },
            "posting_deadline": {
              "title": "Prazo de envio do CD",
              "type": "object",
              "required": [
                "days"
              ],
              "additionalProperties": false,
              "properties": {
                "days": {
                  "type": "integer",
                  "minimum": 0,
                  "maximum": 999999,
                  "title": "Número de dias",
                  "description": "Dias de prazo para postar os produtos após a compra"
                },
                "working_days": {
                  "type": "boolean",
                  "default": true,
                  "title": "Dias úteis"
                },
                "after_approval": {
                  "type": "boolean",
                  "default": true,
                  "title": "Após aprovação do pagamento"
                }
              }
            },
            "zip_range": {
              "title": "Faixa de CEP atendida",
              "type": "object",
              "required": [
                "min",
                "max"
              ],
              "properties": {
                "min": {
                  "type": "integer",
                  "minimum": 10000,
                  "maximum": 999999999,
                  "title": "CEP inicial"
                },
                "max": {
                  "type": "integer",
                  "minimum": 10000,
                  "maximum": 999999999,
                  "title": "CEP final"
                }
              }
            },
            "jadlog_agency": {
              "title": "Agência Jadlog",
              "type": "integer",
              "description": "Código da agência da transportadora Jadlog que fará a coleta das encomendas"
            },
            "loggi_agency": {
              "title": "Agência Loggi",
              "type": "integer",
              "description": "Código da agência da transportadora da Loggi que receberá encomendas"
            },
            "buslog_agency": {
              "title": "Agência Buslog",
              "type": "integer",
              "description": "Código da agência da transportadora da Buslog que receberá encomendas"
            },
            "azul_agency": {
              "title": "Agência Azul",
              "type": "integer",
              "description": "Código da agência da transportadora da Azul (apenas possível envios não comerciais)"
            },
            "melhor_agency": {
              "title": "Agência Melhor Envio",
              "type": "integer",
              "description": "Código da agência do Melhor Envio"
            }
          }
        }
      },
      "hide": true
    }
  },
  "authentication": true,
  "auth_callback_uri": "https://melhorenvio.ecomplus.biz/ecom/auth-callback",
  "auth_scope": {
    "orders": [
      "GET",
      "PATCH",
      "POST"
    ],
    "orders/hidden_metafields": [
      "POST",
      "GET",
      "PATCH",
      "DELETE"
    ],
    "orders/shipping_lines": [
      "POST",
      "GET",
      "PATCH",
      "DELETE"
    ],
    "orders/fulfillments": [
      "POST",
      "PATCH"
    ],
    "procedures": [
      "POST"
    ]
  },
  "modules": {
    "calculate_shipping": {
      "enabled": true,
      "endpoint": "https://melhorenvio.ecomplus.biz/ecom/modules/calculate"
    }
  }
}
